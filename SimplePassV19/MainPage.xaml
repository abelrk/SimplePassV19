<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePassV19.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to SimplePass" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Use Fingerprint to Authenticate" FontSize="Title" Padding="30,00,30,10"/>
        <Button x:Name="authButton" HeightRequest="300" BackgroundColor="DarkGray" TextColor="White" Clicked="AuthButton_Clicked" Text="Authenticate"/>
    </StackLayout>

</ContentPage>
